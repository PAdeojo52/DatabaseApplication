@page
@model DatabaseApplication.Pages.Registered.ProductsModel
@{
    Layout = "~/Pages/Shared/_LayoutLoggedIn.cshtml";
    ViewData["Title"] = "Products";
}

<div class="product-list-container">
    <h1>Products</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name of Product</th>
                <th>Status</th>
                <th>Stock Info</th>
                <th>Category</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <!-- Photo Column -->
                    <td>
                        @if (!string.IsNullOrEmpty(item.Photo))
                        {
                            <img src="@item.Photo" alt="@item.Name" style="width: 50px; height: 50px;" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>

                    <!-- Name Column -->
                    <td>@item.Name</td>

                    <!-- Status Column -->
                    <td>
                        @if (item.Id > 10)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else if (item.Id > 0)
                        {
                            <span class="badge bg-warning">Low in Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Out of Stock</span>
                        }
                    </td>

                    <!-- Stock Info Column -->
                    <td>@item.Price in stock</td>

                    <!-- Category Column -->
                    <td>@item.Category</td>

                    <!-- Location Column -->
                    <td>Null (Location not implemented yet)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

