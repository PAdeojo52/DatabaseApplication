@page
@model DatabaseApplication.Pages.Registered.AddItemModel
@{
}
@{
    Layout = "~/Pages/Shared/_LayoutLoggedIn.cshtml";
    ViewData["Title"] = "Add Product";
}

<div class="add-product-container">
    <h1>Add Item</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="form-grid">
            <!-- Product Name -->
            <div class="form-group">
                <label for="name">Name*</label>
                <input type="text" id="name" asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="category">Category*</label>
                <input type="text" id="category" asp-for="Category" class="form-control" required />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="stock">Stock*</label>
                <input type="number" id="stock" asp-for="Stock" class="form-control" required />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="price">Price*</label>
                <input type="number" step="0.01" id="price" asp-for="Price" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="photo">Photo URL</label>
                <input type="text" id="photo" asp-for="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Item</button>
    </form>
</div>