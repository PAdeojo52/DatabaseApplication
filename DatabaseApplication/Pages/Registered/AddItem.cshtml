@page
@model DatabaseApplication.Pages.Registered.AddItemModel
@{
    Layout = "~/Pages/Shared/_LayoutLoggedIn.cshtml";
    ViewData["Title"] = "Add Product";
}

<div class="add-product-container">
    <h1>Add Item</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="form-grid">
            <!-- Product Name -->
            <div class="form-group">
                <label for="name">Name*</label>
                <input type="text" id="name" asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="form-group">
                <label for="category">Category*</label>
                <select id="category" asp-for="CategoryId" class="form-control" required>
                    <option value="">Select Category</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Make -->
            <div class="form-group">
                <label for="make">Make*</label>
                <input type="text" id="make" asp-for="Make" class="form-control" required />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>

            <!-- Model -->
            <div class="form-group">
                <label for="model">Model*</label>
                <input type="text" id="model" asp-for="Model" class="form-control" required />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="form-group">
                <label for="price">Price*</label>
                <input type="number" step="0.01" id="price" asp-for="Price" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Save Item</button>
        </div>
    </form>
</div>