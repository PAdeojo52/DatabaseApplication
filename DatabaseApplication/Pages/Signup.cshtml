@page
@model DatabaseApplication.Pages.SignupModel
@{
    ViewData["Title"] = "Sign Up";

}

<h2>Sign Up</h2>

<form method="post">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" asp-for="FirstName" class="form-control" id="FirstName" required />
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" asp-for="LastName" class="form-control" id="LastName" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" id="Email" required />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" asp-for="Password" class="form-control" id="Password" required />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@if (Model.Message != null)
{
    <p class="text-success">@Model.Message</p>
}
