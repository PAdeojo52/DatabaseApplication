@page
@model ContactModel
@{
    ViewData["Title"] = "";
}
<h1>@ViewData["Title"]</h1>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact - Medical Equipment Inventory</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .contact-icon {
            font-size: 2.5rem;
            color: #007bff;
            margin-bottom: 1rem;
        }
        .contact-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .contact-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        #map {
            height: 400px;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    
    <!-- Contact Header -->
    <div class="container py-5">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 mb-4">Contact Us</h1>
                <p class="lead text-muted">We're here to help you optimize your medical equipment management</p>
            </div>
        </div>
    </div>

    <!-- Contact Information -->
    <div class="container mb-5">
        <div class="row g-4">
            <!-- Sales Contact -->
            <div class="col-md-4">
                <div class="card contact-card p-4 text-center">
                    <div class="contact-icon">
                        <i class="bi bi-briefcase-fill"></i>
                    </div>
                    <h3 class="h4 mb-3">Sales Inquiries</h3>
                    <p class="text-muted">
                        <strong>Phone:</strong> (555) 123-4567<br>
                        <strong>Email:</strong> sales@medequipinventory.com
                    </p>
                </div>
            </div>

            <!-- Support Contact -->
            <div class="col-md-4">
                <div class="card contact-card p-4 text-center">
                    <div class="contact-icon">
                        <i class="bi bi-headset"></i>
                    </div>
                    <h3 class="h4 mb-3">Technical Support</h3>
                    <p class="text-muted">
                        <strong>Phone:</strong> (555) 987-6543<br>
                        <strong>Email:</strong> support@medequipinventory.com
                    </p>
                </div>
            </div>

            <!-- Headquarters -->
            <div class="col-md-4">
                <div class="card contact-card p-4 text-center">
                    <div class="contact-icon">
                        <i class="bi bi-building"></i>
                    </div>
                    <h3 class="h4 mb-3">Headquarters</h3>
                    <p class="text-muted">
                        123 Medical Innovation Drive<br>
                        Healthcare City, HC 54321<br>
                        United States
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Form -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">Send Us a Message</h2>
                        <form>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="firstName" class="form-label">First Name</label>
                                    <input type="text" class="form-control" id="firstName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="lastName" class="form-label">Last Name</label>
                                    <input type="text" class="form-control" id="lastName" required>
                                </div>
                                <div class="col-12">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                                <div class="col-12">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" id="phone">
                                </div>
                                <div class="col-12">
                                    <label for="messageType" class="form-label">Inquiry Type</label>
                                    <select class="form-select" id="messageType" required>
                                        <option value="">Select Inquiry Type</option>
                                        <option value="sales">Sales Inquiry</option>
                                        <option value="support">Technical Support</option>
                                        <option value="demo">Request a Demo</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="message" class="form-label">Your Message</label>
                                    <textarea class="form-control" id="message" rows="5" required></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="privacyCheck" required>
                                        <label class="form-check-label" for="privacyCheck">
                                            I agree to the privacy policy and terms of service
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary w-100">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

   

    

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>